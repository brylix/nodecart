<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>
{{# each products }}
    <div class="row justify-content-center" style="margin-top: 50px;">
            {{# each this }}
            <div class="card col-sm-6 col-md-3 m-4">
                <img src="{{ this.imagePath }}" class="card-img-top" alt="...">
                <div class="card-body" style="text-align: center;">
                    <h5 class="card-title mb-3">{{ this.title }}</h5>
                    <a href="/add-to-cart/{{ this.id }}" class="btn btn-primary mb-3">LKR {{ this.price }}.00</a>
                    <p class="card-text" style="text-align: justify;">{{ this.description }}</p>
                </div>
            </div>
            {{/each}}
    </div>
{{/each}}