{{#if products}}
<div class="row justify-content">
    <div class="col-12 coll-offset-3 mb-3 justify-content-center">
        <h3 class="text-center">Shopping Cart</h3>
    </div>
</div>
<div class="row justify-content-center"> 
    <div class="col-8 coll-offset-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <strong>{{ this.item.title }}</strong>
                <span class="badge badge-success">LKR {{ this.price }}.00</span>
                <div class="btn-group" style="float: right;">
                    <div class="dropdown">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action <span class="caret"></span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Reduce Item by 1</a>
                            <a class="dropdown-item" href="#">Remove All</a>
                        </div>
                    </div>
                </div>
                <span class="badge badge-secondary" style="float: right; margin-top:6px; margin-right:10px;">{{ this.qty }}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row justify-content">
    <div class="col-12 coll-offset-3 mt-3 justify-content-center">
        <h4 class="text-center">Total : LKR {{ totalPrice }}.00</h4>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-12 coll-offset-3 mt-3 justify-content-center text-center">
        <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-6 coll-offset-3">
        <h1>No items in the cart</h1>
    </div>
</div>
{{/if}}